                <TranslateTransform X="4" Y="13"/>
            </TransformGroup>
        </StackPanel.RenderTransform> 
        <Button HorizontalAlignment="Center" FontSize="22" Content="Resume" Click="BtnResumeClick" >
            <Button.Effect>
                <DropShadowEffect Color="#FFFFE800" Opacity="0.9" BlurRadius="22" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
        <Button HorizontalAlignment="Center" FontSize="22" Content="Level">
            <Button.Effect>
                <DropShadowEffect Color="#FFFFE800" Opacity="0.9" BlurRadius="22" ShadowDepth="0"/>
            </Button.Effect>

        </Button>
        <Button HorizontalAlignment="Center" FontSize="22" Content="Records">
            <Button.Effect>
                <DropShadowEffect Color="#FFFFE800" Opacity="0.9" BlurRadius="22" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
        <Button HorizontalAlignment="Center" FontSize="22" Content="Exit" Click="BtnExitClick">
            <Button.Effect>
                <DropShadowEffect Color="#FFFFE800" Opacity="0.9" BlurRadius="22" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Window>
